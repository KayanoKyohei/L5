<!-- app/views/posts/index.html.erb -->

<h1>ポスト一覧</h1>

<%= link_to '新規ポスト作成', new_post_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>本文</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td>
          <%= link_to '詳細', post %>
          <%= link_to '編集', edit_post_path(post), class: 'btn btn-warning' %>
          <%= link_to '削除', post, method: :delete, data: { confirm: '削除してもよろしいですか?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>